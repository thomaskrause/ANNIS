
<assembly>
  <id>distribution</id>
  <formats>
    <format>dir</format>
    <format>tar.gz</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>src/main/distribution/</directory>
      <excludes>
        <exclude>bin/</exclude>
        <exclude>log/*.log</exclude>
        <exclude>conf/shiro.ini</exclude>
        <exclude>pepper/</exclude>
      </excludes>
      <outputDirectory></outputDirectory>
    </fileSet>
    <fileSet>
      <directory>../</directory>
      <includes>
        <include>NOTICE</include>
        <include>LICENSE</include>
        <include>CHANGELOG</include>
      </includes>
      <outputDirectory></outputDirectory>
    </fileSet>
    <fileSet>
      <directory>THIRD-PARTY</directory>
      <outputDirectory>THIRD-PARTY</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>src/main/distribution/bin/</directory>
      <outputDirectory>bin/</outputDirectory>
      <directoryMode>0755</directoryMode>
      <fileMode>0744</fileMode>
    </fileSet>
  </fileSets>
  <files>
     <file>
      <source>src/main/distribution/conf/shiro.ini</source>
      <outputDirectory>conf/</outputDirectory>
      <filtered>true</filtered>
    </file>
  </files>
  <dependencySets>
    <dependencySet>
      <outputDirectory>lib/</outputDirectory>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <fileMode>0644</fileMode>
    </dependencySet>
    <dependencySet>
      <outputDirectory>pepper</outputDirectory>
      <unpack>true</unpack>
      <includes>
        <include>org.corpus-tools:pepper-lib:zip:3.0.0</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>
